{
  "name": "reactjs-base",
  "scripts": {
    "prepare": "husky install",
    "changeset": "changeset",
    "bump": "changeset version",
    "format": "npx pretty-quick --staged && npx lint-staged",
    "generate": "ts-node ./scripts/generate-package.ts",
    "devee": "ts-node ./scripts/run-pnpm-command.ts",
    "dev": "pnpm --filter ./apps/$0 --stream --parallel dev",
    "dev:storybook": "pnpm --filter base-ui-storybook storybook",
    "start": "pnpm --filter ./apps/$0 --stream --parallel start",
    "build": "pnpm --filter \"./packages/**/**\" -r build",
    "publish": "pnpm --filter \"./packages/**/**\" -r publish --access public --no-git-checks",
    "rmnpm": "pnpm --filter \"./packages/**/**\" --filter \"./apps/**\" -r exec rimraf ./node_modules && rm -rf ./node_modules && rm -rf ./pnpm-lock.yaml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.10",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/styled-components": "^5.1.34",
    "@types/yargs": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-sort-imports": "^1.8.5",
    "pretty-quick": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "styled-components": "^6.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1",
    "yargs": "^17.7.2"
  }
}
